{
  "manifest_version": 2,

  "name": "Jen's Personal Deis Shuttle Tracker",
  "description": "This is a chrome extension to make my life easier when tracking Brandeis shuttles and vans",
  "version": "1.0",

  "browser_action": {
   "default_popup": "popup.html",
   "default_icon": "public/camper16.png"
  },
  "background": {
      "scripts": [
        "eventHandler.js"],
      "persistent": false
  },
  "permissions": [
    "identity",
    "tabs",
    "webNavigation",
    "http://*/*",
    "declarativeContent",
    "storage",
    "alarms",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; object-src"
}
